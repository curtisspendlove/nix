#!/bin/bash

echo "== homebrew upgrade =="
brew update && brew outdated && brew upgrade && brew cleanup

brew install ansible atuin bat bison coreutils cmake curl direnv dust dua-cli duf gcc git gh htop hub just jq lpeg luarocks mosh neofetch neovim readline nmap starship tmux tree unzip watch wget zlib

brew install alacritty obsidian warp

brew tap homebrew/cask-fonts && brew install --cask homebrew/cask-fonts/font-jetbrains-mono-nerd-font homebrew/cask-fonts/font-meslolg-nerd-font homebrew/cask-fonts/font-spacemono-nerd-font homebrew/cask-fonts/font-ubuntu-nerd-font

# asdf all the things
echo "== asdf plugins =="
asdf plugin add doctl
asdf plugin add nodejs
asdf plugin add postgres
asdf plugin add python
asdf plugin add restic
asdf plugin add ruby
asdf plugin add rust
asdf plugin add terraform

asdf install doctl latest

asdf install nodejs latest # v21.6.1	-	2024-01-22	v10.2.4
asdf install nodejs lts # v20.11.0	Iron	2024-01-09	v10.2.4
asdf install nodejs 19.9.0 # v19.9.0	-	2023-04-10	v9.6.3
asdf install nodejs 18.19.0 # v18.19.0	Hydrogen	2023-11-29	v10.2.3
asdf install nodejs 17.9.1 # v17.9.1	-	2022-06-01	v8.11.0
asdf install nodejs 16.20.2 # v16.20.2	Gallium	2023-08-08	v8.19.4

# asdf install postgres latest

asdf install python latest

asdf install restic latest

asdf install ruby latest

asdf install rust latest

asdf install terraform latest

asdf global doctl latest
asdf global nodejs latest
asdf global postgres latest
asdf global python latest
asdf global restic latest
asdf global ruby latest
asdf global rust latest
asdf global terraform latest

asdf current

# https://github.com/smashedtoatoms/asdf-postgres
# pg_ctl initdb
# pg_ctl cvs
# pg_ctl start

